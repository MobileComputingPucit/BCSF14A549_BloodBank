<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/white_greyish">
    <ImageView
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:src="@drawable/logo"/>

    <TextView
        android:id="@+id/lab1"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:text="NAME: "
        android:layout_marginLeft="48dp"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/name"
        android:textColor="@color/black"

        android:singleLine="false"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/lab2"
        android:layout_toRightOf="@+id/lab2" />

    <TextView
        android:id="@+id/lab2"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/lab1"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:text="BLOOD GROUP: "
        android:layout_marginLeft="48dp"
        android:textColor="@color/red"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/blood"
        android:singleLine="false"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/name"
        android:layout_toRightOf="@+id/phone"
        android:layout_toEndOf="@+id/phone" />


    <TextView
        android:id="@+id/lab3"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/lab2"
        android:layout_marginTop="15dp"
        android:text="PHONE# "
        android:textStyle="bold"
        android:layout_marginLeft="48dp"
        android:textColor="@color/red"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/phone"
        android:singleLine="false"
        android:layout_marginLeft="70dp"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/blood"
        android:layout_toRightOf="@+id/lab3"/>


    <TextView
        android:id="@+id/lab4"
        android:layout_below="@+id/lab3"
        android:layout_height="30dp"
        android:layout_width="wrap_content"
        android:singleLine="false"
        android:layout_marginTop="15dp"
        android:text="ADDRESS: "
        android:textStyle="bold"
        android:layout_marginLeft="48dp"
        android:textColor="@color/red"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/Add"
        android:layout_height="30dp"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:layout_toEndOf="@+id/name"
        android:layout_alignTop="@+id/lab4"
        android:layout_toRightOf="@+id/name" />

</RelativeLayout>